program(decls) ::= <<
program {
    $decls:{d | $d.kind$ $decl(d.type, d.name)$};separator=";\n\n"$;
};
>>

decl(type,name) ::= <<
$type$ $name$
>>

structType(fields) ::= <<
struct {
  $fields:{f | $f.type$ $f.name$}; separator=";\n"$;
}
>>

arrayType(type, dims) ::= <<
$type$ $dims:{d | [$d$]}$
>>
